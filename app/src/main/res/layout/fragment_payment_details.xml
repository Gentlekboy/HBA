<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.PaymentDetailsFragment"
    android:id="@+id/frameLayout3">

    <ImageView
        android:id="@+id/payment_details_back_arrow_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/actionModeCloseDrawable"
        app:tint="@color/black"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/payment_details_proceed_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter payment details"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="0dp"
        app:layout_constraintStart_toEndOf="@id/payment_details_back_arrow_button"
        app:layout_constraintTop_toTopOf="@id/payment_details_back_arrow_button"/>

    <TextView
        android:id="@+id/payment_details_card_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card number"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="@id/payment_details_proceed_tv"
        app:layout_constraintTop_toBottomOf="@id/payment_details_back_arrow_button"/>

    <EditText
        android:id="@+id/payment_details_card_number_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:digits="0123456789- "
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:maxLength="30"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:hint="***"
        android:background="@drawable/et_input_with_border_pay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/payment_details_card_number_tv"
        app:layout_constraintTop_toBottomOf="@id/payment_details_card_number_tv"/>

    <TextView
        android:id="@+id/payment_details_expiry_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expiry"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="@+id/payment_details_card_number_et"
        app:layout_constraintTop_toBottomOf="@+id/payment_details_card_number_et"/>

    <EditText
        android:id="@+id/payment_details_expiry_et"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/et_input_with_border_pay"
        android:hint="MM-YY"
        android:inputType="numberDecimal"
        android:maxLength="5"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/payment_details_card_number_tv"
        app:layout_constraintTop_toBottomOf="@id/payment_details_expiry_tv"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/payment_details_cvv_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CVV"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/payment_details_card_number_et"/>

    <EditText
        android:id="@+id/payment_details_cvv_et"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/et_input_with_border_pay"
        android:digits="0123456789"
        android:hint="***"
        android:inputType="number"
        android:maxLength="3"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/payment_details_cvv_tv"
        app:layout_constraintTop_toBottomOf="@id/payment_details_cvv_tv"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/payment_details_submit_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_border_blue_bg"
        android:text="SUBMIT"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="@id/payment_details_cvv_et"
        app:layout_constraintStart_toStartOf="@id/payment_details_expiry_et"
        app:layout_constraintTop_toBottomOf="@id/payment_details_expiry_et"/>

    <ProgressBar
        android:id="@+id/payment_details_payment_order_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/payment_details_expiry_et"/>

    <ImageView
        android:id="@+id/payment_details_padlock_iv"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:src="@drawable/ic_padlock"
        android:layout_marginStart="70dp"
        android:layout_marginTop="70dp"
        app:layout_constraintStart_toStartOf="@id/payment_details_card_number_tv"
        app:layout_constraintTop_toBottomOf="@id/payment_details_submit_button"/>

    <TextView
        android:id="@+id/payment_details_secured_by_paystack_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secured by Paystack"
        android:textColor="@color/black"
        android:layout_marginStart="-10dp"
        app:layout_constraintBottom_toBottomOf="@id/payment_details_padlock_iv"
        app:layout_constraintStart_toEndOf="@id/payment_details_padlock_iv"
        app:layout_constraintTop_toTopOf="@id/payment_details_padlock_iv"/>


</androidx.constraintlayout.widget.ConstraintLayout>