<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:local="http://schemas.android.com/apk/res-auto"

    tools:context=".ui.RegisterFragment">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="5dp"
        android:minHeight="?attr/actionBarSize"
        android:padding="0dp"
        local:layout_constraintEnd_toEndOf="parent"
        local:layout_constraintStart_toStartOf="parent"
        local:layout_constraintTop_toTopOf="parent"
        local:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:padding="0dp"
                android:singleLine="true"
                android:text="@string/registration_registerTextview"
                android:textColor="@color/black"
                android:textSize="29sp"
                android:textStyle="bold"
                local:layout_constraintBottom_toBottomOf="parent"
                local:layout_constraintEnd_toEndOf="parent"
                local:layout_constraintStart_toStartOf="parent"
                local:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/iv_image_register"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/registration_image"
        local:layout_constraintEnd_toEndOf="parent"
        local:layout_constraintStart_toStartOf="parent"
        local:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tv_register_name"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:focusedByDefault="false"
        android:hint="@string/registration_hintName"
        android:textColorHint="@color/black"
        app:endIconMode="clear_text"
        app:helperTextTextColor="#ED4639"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_image_register"
        app:startIconDrawable="@drawable/reg_person_image"
        app:startIconTint="#ED4639">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tv_register_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tvEmail_register_field"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:focusedByDefault="false"
        android:elevation="20dp"
        android:hint="@string/registration_email_field"
        android:textColorHint="@color/black"
        app:endIconMode="clear_text"
        app:helperTextTextColor="#ED4639"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_register_name"
        app:startIconDrawable="@drawable/reg_email_icon"
        app:startIconTint="#ED4639">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tvEmailText_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tv_password"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:focusedByDefault="false"
        android:hint="Password"
        android:textColorHint="@color/black"
        app:endIconMode="password_toggle"
        app:helperTextTextColor="#ED4639"
        app:hintTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/tvEmail_register_field"
        app:layout_constraintStart_toStartOf="@id/tvEmail_register_field"
        app:layout_constraintTop_toBottomOf="@id/tvEmail_register_field"
        app:startIconDrawable="@drawable/registration_password_lock"
        app:startIconTint="#ED4639">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tvEditPassword_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <RadioButton
        android:id="@+id/RegisterTickButton"
        android:layout_width="38dp"
        android:layout_height="43dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:checked="true"
        android:buttonTint="#ED4639"
        android:onClick="checkButton"
        app:layout_constraintEnd_toStartOf="@+id/registrationAgreementText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_password" />

    <TextView
        android:id="@+id/registrationAgreementText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="I hereby agree to the"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tv_registrationTAndC"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/RegisterTickButton"
        app:layout_constraintTop_toTopOf="@id/RegisterTickButton" />

    <TextView
        android:id="@+id/tv_registrationTAndC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:autoLink="all"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/t_c_and_privacy_policy"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/registrationAgreementText"
        app:layout_constraintTop_toTopOf="@id/registrationAgreementText" />


    <TextView
        android:id="@+id/tvRegistrationAlreadyMember"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:text="Already a member?"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/RegisterTickButton"
        app:layout_constraintTop_toBottomOf="@id/registrationAgreementText" />

    <TextView
        android:id="@+id/tv_registrationLoginText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:autoLink="all"
        android:clickable="true"
        android:focusable="true"
        android:padding="1dp"
        android:text="@string/login"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/tvRegistrationAlreadyMember"
        app:layout_constraintTop_toTopOf="@id/tvRegistrationAlreadyMember" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="here"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/tv_registrationLoginText"
        app:layout_constraintTop_toTopOf="@id/tv_registrationLoginText" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_register"
        android:layout_width="294dp"
        android:layout_height="52dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/registration_custom_button"
        android:gravity="center"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvRegistrationAlreadyMember"
        app:layout_constraintVertical_bias="0.344" />


</androidx.constraintlayout.widget.ConstraintLayout>