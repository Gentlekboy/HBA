<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/fragment_booking_details_cv"
        android:layout_width="350dp"
        app:strokeColor="#DADADA"
        app:strokeWidth="1dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="20dp"
        app:cardCornerRadius="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/fragment_booking_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_booking_time"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <ImageView
                android:id="@+id/fragment_booking_hotel_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_hotel"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/fragment_booking_time_tv"
                app:layout_constraintStart_toStartOf="@id/fragment_booking_time_tv"/>
            <TextView
                android:id="@+id/fragment_booking_hotel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/fragment_booking_hotel"
                android:textStyle="bold"
                android:textSize="12dp"
                app:layout_constraintTop_toTopOf="@id/fragment_booking_hotel_iv"
                app:layout_constraintBottom_toBottomOf="@id/fragment_booking_hotel_iv"
                app:layout_constraintStart_toEndOf="@id/fragment_booking_hotel_iv"/>
            <ImageView
                android:id="@+id/fragment_booking_location_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_location"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/fragment_booking_hotel_iv"
                app:layout_constraintStart_toStartOf="@id/fragment_booking_hotel_iv"/>
            <TextView
                android:id="@+id/fragment_booking_location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/fragment_booking_location"
                android:textStyle="bold"
                android:textSize="12dp"
                app:layout_constraintTop_toTopOf="@id/fragment_booking_location_iv"
                app:layout_constraintBottom_toBottomOf="@id/fragment_booking_location_iv"
                app:layout_constraintStart_toEndOf="@id/fragment_booking_location_iv"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_booking_amount"
                android:textColor="#616161"
                android:textStyle="bold"
                android:textSize="25dp"
                app:layout_constraintTop_toTopOf="@id/fragment_booking_hotel_iv"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="30dp"/>

            <View
                android:id="@+id/fragment_booking_line_v"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/teal_200"
                app:layout_constraintTop_toBottomOf="@id/fragment_booking_location_iv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="40dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/fragment_booking_book_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="10dp"
                android:text=""
                app:strokeWidth="1dp"
                app:strokeColor="#E94138"
                android:backgroundTint="@color/white"
                android:textColor="#E94138"
                android:textAllCaps="false"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/fragment_booking_line_v"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>